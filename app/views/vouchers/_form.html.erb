<%= form_with(model: voucher, local: true) do |form| %>
  <% if voucher.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(voucher.errors.count, "error") %> prohibited this voucher from being saved:</h2>

      <ul>
      <% voucher.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :voucher_name %>
  </div>

    <div class="field">
    <% if Voucher.any? %>
    <h3> Your Last iv number was: <%= Voucher.last.iv_numb%></h3>

    <% iv_number = Voucher.last.iv_numb+=1 %>
     <h3> Current new iv: <%= iv_number %></h3>
    <% else %>
    <% iv_number = 1 %>
    <h3>Create Fist Voucher and Iv Will be: 01</h3>
    <% end %>
    <%= form.label :iv_numb %>
    <%= form.hidden_field :iv_numb, value:iv_number, id: :voucher_iv_numb %>
  </div>

  <div class="field">
    <%= form.label :mess_id %>
    <%= collection_select(:voucher, :mess_id, Mess.all, :id, :name, prompt: true) %>

  </div>

  <div class="field">
    <%= form.label :catering_id %>
    <%= collection_select(:voucher, :catering_id, Catering.all, :id, :name, prompt: true) %>
  </div>
<br/>
<h2>vouchers issues</h2>
     <% Item.all.each do |i|%>
    <%=form.fields_for :issues do |f|%>

             <div class="field">
              <%#= f.label  %> <%= i.name%> 
              <%= f.hidden_field :item_id, value:i.id, id: :issue_item_id %>
            </div>

            <div class="field">
              <%= f.label :qty %>
              <%= f.text_field :qty, id: :issue_qty %>
            </div>
     
    <% end %>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>



