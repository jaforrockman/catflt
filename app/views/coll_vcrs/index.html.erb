<p id="notice"><%= notice %></p>

<h1>Coll Vcrs</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Catering</th>
      <th>Ext Rv</th>
      <th>Date</th>
      <th>Company Name</th>
      <th>Com Inv Num</th>
      <% Item.all.each do |i|%>
      <th><%= i.name %> </th>
      <% end %>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coll_vcrs.each do |coll_vcr| %>
      <tr>
        <td><%= Catering.find(coll_vcr.catering_id).short_name %></td>
        <td><%= coll_vcr.ext_rv %></td>
        <td><%= coll_vcr.coll_date %></td>
        <td><%= Company.find(coll_vcr.company_id).name %></td>
        <td><%= coll_vcr.invoice_num %></td>
        
          <% coll_vcr.collections.each do |i|%>
        <th><%= i.qty %> </th>
          <% end %>

        <td><%= link_to 'Show', coll_vcr %></td>
        <td><%= link_to 'Edit', edit_coll_vcr_path(coll_vcr) %></td>
        <td><%= link_to 'Destroy', coll_vcr, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

