<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Inum</th>
      <th>Name</th>      
      <td>Officers Scale</td>
      <td>Airmen's Scale</td>
      <td>Modc Scale</td>
      <td>Civ1</td>
      <td>Civ2 Scale</td>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.inum %></td>
        <td><%= item.name %></td>
        <td><%= item.mes_unit %></td>
        <td><%= item.offr_scale %></td>
        <td><%= item.am_scale %></td>
        <td><%= item.modc_scale %></td>
        <td><%= item.civ1_scale %></td>
        <td><%= item.civ2_scale %></td>
        <td><% if item.status == true %>
           Active
          <% else %>
           Inactive
            
          <% end %>
        </td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
