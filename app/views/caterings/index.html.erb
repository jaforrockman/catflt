<p id="notice"><%= notice %></p>

<h1>Caterings</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Short name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @caterings.each do |catering| %>
      <tr>
        <td><%= catering.name %></td>
        <td><%= catering.short_name %></td>
        <td><%= link_to 'Show', catering %></td>
        <td><%= link_to 'Edit', edit_catering_path(catering) %></td>
        <td><%= link_to 'Destroy', catering, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

